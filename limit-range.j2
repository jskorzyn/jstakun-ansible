apiVersion: v1
kind: "LimitRange"
metadata:
  name: "core-resource-limits" 
  namespace: "{{ project_name }}"
spec:
  limits:
    - type: "Pod"
      max:
        cpu: "1" 
        memory: "1Gi" 
      min:
        cpu: "250m" 
        memory: "6Mi" 
    - type: "Container"
      max:
        cpu: "1" 
        memory: "1Gi" 
      min:
        cpu: "100m" 
        memory: "4Mi" 
      default:
        cpu: "500m" 
        memory: "512Mi" 
      defaultRequest:
        cpu: "250m" 
        memory: "256Mi" 
